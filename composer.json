{
    "name": "your-vendor/redis-service",
    "description": "Framework-agnostic Redis service with Symfony & Laravel integrations",
    "type": "library",
    "require": {
        "php": "^8.1",
        "ext-redis": "*",
        "symfony/dependency-injection": "^7.3",
        "symfony/config": "^7.3",
        "symfony/http-kernel": "^7.3",
        "symfony/console": "^7.3",
        "symfony/string": "^7.3",
        "symfony/service-contracts": "^3.6",
        "illuminate/support": "^10.0"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
          "RedisService\\": "src/"
        }
    },
    "autoload-dev": {
      "psr-4": {
        "RedisService\\Tests\\": "tests/"
      }
    },
    "authors": [
        {
            "name": "Rangel Uzunov",
            "email": "rangelcho1900@gmail.com"
        }
    ],
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.86",
        "phpstan/phpstan": "^2.1",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan-phpunit": "^2.0"
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "scripts": {
      "cs-fix": "php-cs-fixer fix --config=.php-cs-fixer.php",
      "cs-check": "php-cs-fixer fix --config=.php-cs-fixer.php --dry-run --diff",
      "stan": "phpstan analyse --configuration=phpstan.neon"
    }
}
